<header id="header">
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner">
      <h1 id="logo-wrap">
      </h1>
      <% if (theme.subtitle){ %>
        <h2 id="subtitle-wrap">
          <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle %></a>
        </h2>
      <% } %>
      <div id="rss-wrap">
      <% if (theme.rss){ %>
        <a id="nav-rss-link" class="nav-icon" href="<%- theme.rss %>" title="RSS Feed"></a>
      <% } %>
      <% if (theme.github) {%>
        <a id="nav-github-link" class="nav-icon" href="https://github.com/<%- theme.github %>" title="Github Home" target="_blank"></a>
      <% } %>
      </div>
    </div>
  </div>
  <div id="header-inner" class="">
    <a class="title"></a>
    <nav id="main-nav">
      <a id="main-nav-toggle" class="nav-icon"></a>
    </nav>
    <nav id="sub-nav">
      <a id="nav-search-btn" class="nav-icon" title="Search"></a>
    </nav>
    <div id="search-form-wrap">
      <%- search_form({button: '&#xF002;'}) %>
    </div>
    <div id="sub-profile">
    </div>
  </div>
  <div class="site-nav">
    <ul>
    <% for (var i in theme.menu){ %>
      <li>
        <a href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
      </li>
    <% } %>
    </ul>
  </div>
</header>
